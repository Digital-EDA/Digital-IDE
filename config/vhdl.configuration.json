{
    "comments": {
       "lineComment": "--",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{" , "}"],
        ["[" , "]"],
        ["(" , ")"],
        ["'" , "'"],
        ["`" , "`"],
        ["\"", "\""]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "onTypeFormatting": {
        "autoFormatTriggerCharacters": ["\n"]
    }
}
