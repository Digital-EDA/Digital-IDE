    "module with parameters": {
        "prefix": "modp",
        "body": [
            "module ${1:name} #(",
            "    parameter    IWIDTH = ${2:12},",
            "    parameter    OWIDTH = $2",
            ") (",
            "    input      clock,",
            "    input      reset,",
            "    input  [IWIDTH - 1 : 0] ${3:data_i},",
            "    output [OWIDTH - 1 : 0] ${4:data_o}",
            ");",
            "    $5",
            "endmodule"
        ],
        "description": "Insert a module with parameter"
    },

    "module without parameters": {
